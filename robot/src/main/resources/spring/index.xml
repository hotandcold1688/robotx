<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName">

	<bean id="jdbcFetcher" class="com.macyou.robot.index.JdbcFetcher" />
	<!--<bean id="indexSearcherFactory" class="com.macyou.robot.index.DefaultIndexSearcherFactory" 
		init-method="init"></bean> -->
	<bean id="simpleRobotConfig" class="com.macyou.robot.config.RobotConfig"></bean>
	<bean id="simpleRobot" class="com.macyou.robot.SimpleRobot">
	   <property name="config" ref="simpleRobotConfig" />
	</bean>

	<bean id="robotManager" class="com.macyou.robot.RobotManager" init-method="init">
	  <property name="robotMap">
			<map>
				<entry key="robot1">
						<ref bean="simpleRobot" />
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="indexManager" class="com.macyou.robot.IndexManager">
		<property name="fetcher" ref="jdbcFetcher" />
	</bean>
	
	<bean id="simpleServlet" class="com.macyou.web.SimpleServlet">
	</bean>
	
</beans>